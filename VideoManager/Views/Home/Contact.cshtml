@section styles
{
    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        .topic-container {
            color: black;
            background-color: white;
        }

        .help-container {
            background-color: white;
            margin-left: 3%;
            width: 97%;
        }

        .title {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            margin-bottom: 25px;
        }

            .title h1 {
                font-size: 38px;
                font-weight: bold;
            }

        .help-item-title {
            padding: 1px;
            background-color: #292929;
            border-bottom: 2px solid #7eabc0;
            width: 95%;
            margin-left: auto;
            margin-right: auto;
        }

            .help-item-title:hover {
                background-color: #3c3c3c;
            }

            .help-item-title i {
                font-size: 25px;
                margin: 0 10px;
            }

            .help-item-title a {
                color: white;
                text-decoration: none !important;
            }

                .help-item-title a:hover {
                    text-decoration: none !important;
                }

            .help-item-title h1 {
                font-size: 30px;
            }

        .help-content {
            width: 95%;
            margin-left: auto;
            margin-right: auto;
            background-color: #B3E6C9;
            border-bottom: 2px solid #7eabc0;
