            }

        .content-button {
            background: #428bca;
            font: inherit;
            color: white;
            font-size: 14px;
            font-weight: 400;
            height: 36px;
            letter-spacing: .75px;
            line-height: 1;
            margin: 8px 0;
            padding: 12px 23px;
            text-transform: uppercase;
            vertical-align: middle;
        }

            .content-button:hover {
                color: white;
            }
