@model VideoManager.Models.ViewModels.LinkCRMtoFHViewModel
@{
    ViewBag.Title = "LinkCRMtoFH";
    Layout = "~/Views/Shared/_LayoutCRM.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.CRMFuneralHomeId)
<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                Grab the id by going to the funeral home list and clicking on the gear icon the last number in the url is the id
            </header>
            <div class="panel-body">

                <div class="form-group">
                    <label>Portal ID of Home</label>
                    <div class="iconic-input">
                        <i class="fa fa-link"></i>
                        @Html.EditorFor(model => model.PortalFuneralHomeId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PortalFuneralHomeId, "", new { @class = "text-danger" })
                    </div>
                </div>
 
            </div>
        </section>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

