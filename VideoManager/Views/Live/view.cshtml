@model VideoManager.Models.Data.Service
@{
    string videoTitle = Model.VideoTitle.Replace("'", " ");
}

    <script type="text/javascript" src="//player.wowza.com/player/latest/wowzaplayer.min.js"></script>
    <div class="col-lg-6 col-lg-offset-3">
        <div id="playerElement" style="width:100%; height:0; padding:0 0 56.25% 0; margin-top:55px"></div>
    </div>
  
    <script type="text/javascript">
    WowzaPlayer.create('playerElement',
        {
            "license": "PLAY1-7r88f-Rfwdk-zXdVp-VnJeu-xZx9n",
            "title": "@videoTitle",
            "description": "",
            "sourceURL": "@Model.LiveStream.SourceURL",
            "autoPlay": false,
            "volume": "75",
            "mute": false,
            "loop": false,
            "audioOnly": false,
            "uiShowQuickRewind": true,
            "uiQuickRewindSeconds": "30"
        }
    );
    </script>
