@model VideoManager.Models.EditViewModel

@{
    ViewBag.Title = "Edit";
}


        <h1>Edit User Information</h1>
        <p>This page allows you to edit your user information</p>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-6 col-lg-offset-3">
        <div class="panel panel-primary uploadPanels">
            <div class="panel-heading">
                <h3 class="panel-title">User Information</h3>
            </div>
            <div class="panel-body" style="text-align:center">
                <div class="bs-example form-horizontal">
                    <fieldset>
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
							@Html.HiddenFor(model =>model.Email)
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    <h3>
                                        @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    </h3>
                                </div>
                            </div>

                       
                                      <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PlainPassword, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("PlainPassword", "", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PlainPassword)
                                    <i>leave blank for no change</i>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-2">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                </div>
                                <div class="col-lg-2">
                                    @if (User.IsInRole("FuneralHome"))
                                    {
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                                    }


                                </div>
                            </div>
                        </div>
                    </fieldset>







                </div>
            </div>
        </div>
    </div>
}

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script language="javascript" type="text/javascript" src="/Scripts/backstretch.js"></script>
<script>
    $.backstretch("/Content/images/Barn.jpg", { speed: 550 });
</script>
